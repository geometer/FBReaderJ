<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@android:color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="12dp"
            android:layout_height="47dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/back_action"
                android:layout_marginLeft="10dp"
                android:src="@drawable/yota_bs_action_back"
                android:layout_gravity="top"
                android:layout_width="wrap_content"
                android:paddingRight="42dp"
                android:layout_height="36dp" />
            <LinearLayout
                android:id="@+id/title"
                android:layout_marginRight="20dp"
                android:layout_width="182dp"
                android:layout_height="36dp"
                android:gravity="top"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/book_author"
                    android:text="Author"
                    android:singleLine="true"
                    android:fontFamily="PT Sans Yota"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@android:color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/book_title"
                    android:text="Book title"
                    android:singleLine="true"
                    android:fontFamily="PT Sans Yota"
                    android:textStyle="bold"
                    android:textSize="10dp"
                    android:textColor="@android:color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:id="@+id/font_action"
                android:src="@drawable/font_action"
                android:layout_gravity="top"
                android:scaleType="center"
                android:layout_width="42dp"
                android:layout_height="36dp" />
            <ImageView
                android:id="@+id/search_action"
                android:src="@drawable/bookmark_action"
                android:layout_gravity="top"
                android:scaleType="center"
                android:layout_width="42dp"
                android:layout_height="36dp" />
            <ImageView
                android:id="@+id/bookmark_action"
                android:src="@drawable/bookmark_action"
                android:layout_gravity="top"
                android:scaleType="center"
                android:layout_width="42dp"
                android:layout_height="36dp"
	            android:visibility="gone"/>
        </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:scaleType="matrix"
        android:src="@drawable/single_line_360_length"
        android:layout_gravity="bottom"/>
</LinearLayout>