<resources>
  <style name="FBReader.Activity" parent="android:Theme">
	</style>
  <style name="FBReader.Dialog" parent="android:Theme.Dialog">
	</style>
	<color name="transparent">#00000000</color>
  <style name="FBReader.Transparent" parent="android:Theme.Translucent.NoTitleBar">
    <item name="android:windowBackground">@color/transparent</item>
  </style>

  <!-- the theme applied to the application or activity -->
  <style name="ActivityWithWhiteActionBar"
           parent="@android:style/Theme.Holo.Light">
      <item name="android:actionBarStyle">@style/WhiteActionBar</item>
      <item name="android:homeAsUpIndicator">@drawable/yota_actionbar_back_indicator</item>
      <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
  </style>

  <!-- ActionBar styles -->
  <style name="WhiteActionBar"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@android:color/white</item>
        <item name="android:icon">@drawable/r_color_logo</item>
        <item name="android:titleTextStyle">@style/WhiteActionBarTitleStyle</item>
  </style>

  <style name="WhiteActionBarTitleStyle"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title.Inverse">
        <item name="android:textColor">@color/gray_title_text</item>
        <item name="android:fontFamily">"PT Sans Pro"</item>
  </style>

  <style name="ActionButtonStyle" parent="@android:style/Widget.Holo.Light.ActionButton">
        <item name="android:minWidth">48dp</item>
        <item name="android:maxWidth">48dp</item>
  </style>

</resources>
