<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/bottom_line"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/more_layout"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="1px"
        />
    <RelativeLayout
        android:id="@+id/more_layout"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:visibility="gone">
        <FrameLayout
            android:id="@+id/more"
            android:layout_above="@+id/dot_line"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/more_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="PT Sans Yota"
            android:text="more"
            android:textColor="#ffffff"
            android:textSize="14dp" />
            <ImageView
                android:id="@+id/more_image"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layerType="software"/>
        </FrameLayout>
        <ImageView
            android:id="@+id/dot_line"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignLeft="@+id/more"
            android:layout_alignRight="@+id/more"
            android:layout_alignParentBottom="true"
            android:src="@drawable/widget_dot_line"
            android:layerType="software" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6.6dp"
        android:layout_marginBottom="11dp"
        android:layout_above="@id/bottom_line"
        android:src="@drawable/template_icon"/>
    <TextView
        android:id="@+id/left_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/icon"
        android:layout_toLeftOf="@+id/right_text"
        android:layout_above="@id/bottom_line"
        android:layout_marginBottom="8dp"
        android:text="info"
        android:textSize="14dp"
        android:singleLine="true"
        android:fontFamily="PT Sans Yota"
        android:textStyle="bold"
        android:textColor="@android:color/white"/>
    <TextView
        android:id="@+id/right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_line"
        android:layout_toLeftOf="@id/more_layout"
        android:layout_alignWithParentIfMissing="true"
        android:gravity="right"
        android:text="info"
        android:textSize="14dp"
        android:layout_marginLeft="6.6dp"
        android:layout_marginBottom="8dp"
        android:singleLine="true"
        android:fontFamily="PT Sans Yota"
        android:textColor="@android:color/white"/>
    <FrameLayout
        android:id="@+id/content"
        android:layout_above="@id/left_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
</RelativeLayout>