<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/more_layout"
        android:background="@android:color/white" />

    <RelativeLayout
        android:id="@+id/more_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:visibility="gone" >

        <FrameLayout
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/dot_line"
            android:layout_marginBottom="8dp" >

            <TextView
                android:id="@+id/more_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="PT Sans Yota"
                android:text="@string/text_more"
                android:textColor="#ffffff"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/more_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layerType="software"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="gone" />
        </FrameLayout>

        <ImageView
            android:id="@+id/dot_line"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignLeft="@+id/more"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/more"
            android:layerType="software"
            android:src="@drawable/widget_dot_line" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_line"
        android:layout_marginBottom="11dp"
        android:layout_marginRight="6.6dp"
        android:src="@drawable/template_icon" />

    <TextView
        android:id="@+id/left_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_line"
        android:layout_marginBottom="8dp"
        android:layout_toLeftOf="@+id/right_text"
        android:layout_toRightOf="@id/icon"
        android:fontFamily="PT Sans Yota"
        android:singleLine="true"
        android:text="@string/text_info"
        android:textColor="@android:color/white"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_line"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="6.6dp"
        android:layout_toLeftOf="@id/more_layout"
        android:fontFamily="PT Sans Yota"
        android:gravity="right"
        android:singleLine="true"
        android:text="@string/text_info"
        android:textColor="@android:color/white"
        android:textSize="14dp" />

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/left_text" >
    </FrameLayout>

</RelativeLayout>